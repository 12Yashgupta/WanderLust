<% layout("/layouts/boilerplate") -%>
<body>
   <div class="row mt-3">
      <div class="col-8 offset-2" >
    <h3>Enter the New Listing:-</h3>
   <form action="/listings" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
      <div class="mb-3" >
         <label for="title" class="form-label">Title</label>
         <input 
         type="text" 
         name="listing[title]" 
         placeholder="Add a catchy title" 
         class="form-control"
         required
         />
         <div class="valid-feedback">Looks good!</div>
       </div>
        <div class="mb-3">
         <label for="description" class="form-label">Description</label>
         <textarea name="listing[description]" 
         placeholder="Enter  description" 
         rows="6" 
         cols="30"
         class="form-control" 
         required></textarea>
         <div class="invalid-feedback">Enter valid description!</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Image</label>
          <input 
           type="file"
           name="listing[image]"
           placeholder="Enter image URL/Link" 
           class="form-control"
           />
 
         </div>
        <div class="row">
          <div class="mb-3 col-7">
            <label for="country" class="form-label">Country</label>
            <input 
            type="text" 
            name="listing[country]" 
            placeholder="Enter  country"
            class="form-control"
            required
            />
            <div class="invalid-feedback">Enter valid country!</div>
          </div>
         <div class="mb-3 col-5">
            <label for="price" class="form-label">Price</label>
            <input 
            type="text" 
            name="listing[price]" 
            placeholder="Enter  price"
            class="form-control"
            required
            />
            <div class="invalid-feedback">Enter valid price!</div>
           </div>
         
        </div>
       
       <div class="row">
        <div class="mb-3 col-7">
          <label for="location" class="form-label">Location</label>
          <input 
          type="text" 
          name="listing[location]" 
          placeholder="Enter  location"
          class="form-control"
          required
          />
          <div class="invalid-feedback">Enter valid location!</div>
        </div>
        <div class="mb-3 col-5">
          <label for="category" class="form-label">Category</label>
          <select name="listing[category]" class="form-select" aria-label="Default select example" required>
            <option value="Rooms">Rooms</option>
            <option value="Trending">Trending</option> 
            <option value="Campings">Campings</option>
            <option value="Farms">Farms</option>
            <option value="Mountains">Mountains</option>
            <option value="Pools">Pools</option>
            <option value="Castles">Castles</option>
            <option value="Arctic">Arctic</option>
          </select>
          <div class="invalid-feedback">Enter valid location!</div>
        </div>
       </div>
      
      
       <br>
        <button class="btn btn-dark add-btn mt-3">Add</button>
        <br><br>
     </form>
     
</body>
</div>
</div>